<div class="container">
  <h1 class="py-3">New Game</h1>
  <%# <%= @letters %>
  <div class="letters d-flex justify-content-around">
    <% @letters.each do |letter| %>
      <div class="letter-card shadow">
        <h3 class="text-white text-center"><%= letter %></h3>
      </div>
    <% end %>
  </div>
  <form action="/score" method="POST" data-turbo="false" class="p-3">
    <!-- ... -->
    <label for="input" class="form-label">What is the longest word you can make?</label>
    <div class="d-flex">
      <input id="input" type="text" name="word" class="form-control">
      <input type="submit" class="btn btn-primary" value="Play">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters  %>
  </form>
</div>
